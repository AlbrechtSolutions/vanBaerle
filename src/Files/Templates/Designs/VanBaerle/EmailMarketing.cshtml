         fontFamily = "font-size : 24px; @fontFamily3",
         fontSize14 = "font-size: 14px;",
         fontSize12 = "font-size: 12px;",
         fontFamily2 = "font-family: Arial, sans-serif;",
         fontFamily3 = "font-family: Helvetica, Arial, sans-serif;",
